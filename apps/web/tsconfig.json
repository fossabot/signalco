{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@signalco/tsconfig/web.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "*": [
                "./*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "src",
        "components",
        "pages",
        "next-env.d.ts",
        "@types",
        ".next/types/**/*.ts"
    ]
}
