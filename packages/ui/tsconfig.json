{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@signalco/tsconfig/react-library.json",
    "include": [
        "./src/**/*.ts*"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules",
        ".turbo",
        "src/**/*.stories.ts*"
    ],
    "compilerOptions": {
        "lib": [
            "ES2015",
            "dom"
        ],
        "rootDir": "./src",
        "paths": {
            "@signalco/ui": ["./src"],
            "@signalco/ui/*": ["./src/*"]
        },
        "baseUrl": "./"
    }
}
