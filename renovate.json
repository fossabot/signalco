{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "automerge": true,
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "matchPackageNames": [
                "@babel/core",
                "@rollup/plugin-commonjs",
                "@rollup/plugin-json",
                "@vvo/tzdb",
                "@types/node",
                "@types/react-node",
                "@types/react-dom",
                "@types/react-syntax-highlighter",
                "classix",
                "d3",
                "esbuild",
                "eslint",
                "eslint-config-next",
                "pnpm",
                "playwright",
                "mcr.microsoft.com/playwright",
                "rollup",
                "sass",
                "sharp"
            ]
        }
    ],
    "rangeStrategy": "pin",
    "dependencyDashboard": true,
    "assigneesFromCodeOwners": true,
    "baseBranches": [
        "next"
    ],
    "prHourlyLimit": 6,
    "platformAutomerge": true,
    "platformCommit": true
}
