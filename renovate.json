{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "automerge": true,
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "matchPackageNames": [
                "eslint",
                "sass",
                "@vvo/tzdb",
                "@types/node"
            ]
        }
    ],
    "rangeStrategy": "pin",
    "dependencyDashboard": true,
    "assigneesFromCodeOwners": true,
    "baseBranches": [
        "next"
    ],
    "prHourlyLimit": 6,
    "platformAutomerge": true,
    "platformCommit": true
}
