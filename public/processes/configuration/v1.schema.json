{
    "$id": "https://www.signalco.dev/processes/configuration/v1.schema.json",
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Signalco Process Configuration Schema",
    "type": "object",
    "required": [
        "version",
        "type"
    ],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "version": {
            "type": "string",
            "description": "Version of configuration schema."
        },
        "type": {
            "enum": [
                "basic"
            ],
            "description": "Type of the process configuration."
        },
        "conducts": {
            "type": "array",
            "description": "List of conducts to execute.",
            "minItems": 1,
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/definitions/conduct"
                    }
                ]
            }
        }
    },
    "definitions": {
        "conduct": {
            "required": [
                "id",
                "type"
            ],
            "properties": {
                "id": {
                    "$ref": "#/definitions/guidString"
                },
                "type": {
                    "type": "string"
                },
                "notBeforeConduct": {
                    "description": "Id of another conduct of same process. If defined, this conduct will not execute before specified conduct.",
                    "$ref": "#/definitions/guidString"
                },
                "delayBefore": {
                    "description": "Number of miliseconds to delay execution of this conduct.",
                    "type": "number"
                },
                "delayAfter": {
                    "description": "Number of miliseconds to wait until this conduct is marked completed.",
                    "type": "number"
                }
            },
            "oneOf": [
                {
                    "$ref": "#/definitions/conduct/definitions/contactTrigger"
                },
                {
                    "$ref": "#/definitions/conduct/definitions/conductEntity"
                }
            ],
            "definitions": {
                "contactTrigger": {
                    "title": "Conduct: Contact Trigger",
                    "type": "object",
                    "required": [
                        "contactPointer"
                    ],
                    "properties": {
                        "type": {
                            "const": "contactTrigger"
                        },
                        "contactPointer": {
                            "$ref": "#/definitions/contactPointer"
                        }
                    }
                },
                "conductEntity": {
                    "title": "Conduct: Entity Conduct",
                    "type": "object",
                    "required": [
                        "contactPointer"
                    ],
                    "properties": {
                        "type": {
                            "const": "conductEntity"
                        },
                        "contactPointer": {
                            "$ref": "#/definitions/contactPointer"
                        },
                        "valueSerialized": {
                            "type": "string"
                        },
                        "conditions": {
                            "type": "array",
                            "items": {
                                "oneOf": [
                                    {
                                        "$ref": "#/definitions/condition"
                                    }
                                ]
                            }
                        }
                    }
                }
            }
        },
        "condition": {
            "title": "Condition",
            "oneOf": [
                {
                    "$ref": "#/definitions/condition/definitions/orGroup"
                },
                {
                    "$ref": "#/definitions/condition/definitions/compare"
                },
                {
                    "$ref": "#/definitions/condition/definitions/contact"
                },
                {
                    "$ref": "#/definitions/condition/definitions/value"
                }
            ],
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "type": "string"
                }
            },
            "definitions": {
                "orGroup": {
                    "additionalProperties": false,
                    "required": [
                        "type",
                        "conditions"
                    ],
                    "properties": {
                        "type": {
                            "type": "string",
                            "const": "orGroup"
                        },
                        "conditions": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "oneOf": [
                                    {
                                        "$ref": "#/definitions/condition"
                                    }
                                ]
                            }
                        }
                    }
                },
                "compare": {
                    "additionalProperties": false,
                    "required": [
                        "type",
                        "op",
                        "left",
                        "right"
                    ],
                    "properties": {
                        "type": {
                            "type": "string",
                            "const": "compare"
                        },
                        "op": {
                            "type": "string",
                            "enum": [
                                "equal",
                                "notEqual"
                            ]
                        },
                        "left": {
                            "$ref": "#/definitions/condition"
                        },
                        "right": {
                            "$ref": "#/definitions/condition"
                        }
                    }
                },
                "contact": {
                    "additionalProperties": false,
                    "required": [
                        "type",
                        "contactPointer"
                    ],
                    "properties": {
                        "type": {
                            "type": "string",
                            "const": "contact"
                        },
                        "contactPointer": {
                            "$ref": "#/definitions/contactPointer"
                        }
                    }
                },
                "value": {
                    "additionalProperties": false,
                    "required": [
                        "type"
                    ],
                    "properties": {
                        "type": {
                            "type": "string",
                            "const": "value"
                        },
                        "valueSerialized": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "contactPointer": {
            "title": "Entity Contact Pointer",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "entityId": {
                    "$ref": "#/definitions/guidString"
                },
                "channelName": {
                    "type": "string",
                    "pattern": "^[0-9a-zA-Z]+$"
                },
                "contactName": {
                    "type": "string"
                }
            },
            "required": [
                "channelName",
                "contactName",
                "entityId"
            ]
        },
        "guidString": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{8}-([0-9a-fA-F]{4}-){3}[0-9a-fA-F]{12}$"
        }
    }
}
